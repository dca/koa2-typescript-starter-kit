{
  "compilerOptions": {
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "module": "commonjs",
    "target": "es2017",
    "strict": true,
    "strictPropertyInitialization": false,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "sourceMap": true,
    "outDir": "./build",
    "baseUrl": ".",
    "rootDirs": [
      "./src",
      "./test"
    ],
    "typeRoots": [
      "node_modules/@types",
      "src/tstypings"
    ]
  },
  "compileOnSave": false,
  "exclude": [
    "node_modules"
  ],
  "atom": {
    "rewriteTsconfig": true
  }
}